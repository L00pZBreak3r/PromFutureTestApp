@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar shadow-lg">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 bg-dark text-white">
            <div class="col-8">@Title</div>
            <div class="col"><img src="/images/user.svg" alt="" width="30"> @UserTitle <a href="#" style="text-decoration: none;"><img src="/images/exit.svg" alt="" width="30"></a></div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
